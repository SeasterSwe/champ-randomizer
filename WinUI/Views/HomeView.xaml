<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinUI.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewModels:ManageViewModel xmlns:viewModels="using:WinUI.ViewModels" />
    </Page.DataContext>
    <Grid>
        <ScrollViewer>
            <ItemsControl x:Name="ChampionsItemsControl" ItemsSource="{Binding ChampionData.Lists}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapGrid x:Name="ChampionsWrapGrid"
                      Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="8"
                            Padding="12"
                            Background="#FFF"
                            CornerRadius="8"
                            Width="250"
                            Height="120"
                            BorderBrush="#DDD"
                            BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Width="40" Height="28" ToolTipService.ToolTip="Random Champion"
                                        Click="RandomChampionButton_Click">
                                        <FontIcon Glyph="&#xE77B;" FontSize="16" FontFamily="Segoe MDL2 Assets" />
                                    </Button>
                                    <TextBlock Text="{Binding Name}"
                                          FontSize="16"
                                          Margin="4,0" />
                                    <TextBlock Text="{Binding Role}"
                                         FontWeight="Bold"
                                         FontSize="16"
                                         Margin="4,0" />
                                </StackPanel>
                                <TextBlock Text="{Binding Champions, Converter={StaticResource ChampionNamesConverter}}"
                                       TextWrapping="Wrap"
                                       Margin="0,8,0,0"
                                       FontSize="13" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button x:Name="PopupAnchor" Width="0" Height="0" Visibility="Collapsed"/>

    </Grid>
</Page>